{
  "extends": ["config:base"],
  "dependencyDashboardApproval": true,
  "commitBody": "Signed-off-by: {{{gitAuthor}}}",
  "pin": {
    "commitBody": "[skip ci]"
  },
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "automerge": true
    },
    {
      "matchPackagePrefixes": ["@types/"],
      "automerge": true
    }
  ]
}
