{
  "extends": ["config:base"],
  "dependencyDashboardApproval": true,
  "preserveSemverRanges": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "automerge": true
    }
  ]
}
